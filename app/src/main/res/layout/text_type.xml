
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:padding="7dp">

        <TextView
            android:id="@+id/txt_postion"
            android:layout_width="128dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="85dp"
            android:text="Postion" />

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="128dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="85dp"
            android:text="00 000 000" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="93dp"

            android:layout_marginRight="93dp" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/txt_postion"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="114dp"
            android:layout_marginLeft="114dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toStartOf="@+id/txt_postion"
            android:layout_toLeftOf="@+id/txt_postion"
            card_view:srcCompat="@drawable/ic_marker" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/txt_postion"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="114dp"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_toStartOf="@+id/txt_postion"
            android:layout_toLeftOf="@+id/txt_postion"
            card_view:srcCompat="@drawable/ic_phone" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_postion"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="15m"
            android:textColor="@color/com_facebook_button_background_color_disabled" />

        <Button
            android:id="@+id/phone"
            android:layout_width="59dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="7dp"
            android:text="@string/call"
            android:textColor="@color/colorPrimary"
           />
    </RelativeLayout>


</android.support.v7.widget.CardView>
